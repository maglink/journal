<?php
$title = 'Grade list';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
    <a href="<?php echo $this->url('admin',
        array('action'=>'addgrade'));?>">Add grade</a>
</p>
<table class="table">
<tr>
    <th>Level</th>
    <th>Prefix</th>
    <th>&nbsp;</th>
</tr>
