<tr>
    <td><?php echo $this->escapeHtml($grade->level);?></td>
    <td><?php echo $this->escapeHtml($grade->prefix);?></td>
    <td>
        <a href="<?php echo $this->url('grade',
            array('action'=>'unitlist', 'id' => $grade->id));?>">[Unit List]</a>
        <a href="<?php echo $this->url('grade',
            array('action'=>'subjectlist', 'id' => $grade->id));?>">[Subject List]</a>
    </td>
</tr>
